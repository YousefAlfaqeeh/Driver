<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:background="@color/color_header"
        android:gravity="center_horizontal|center_vertical"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:tint="@color/color_white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_notifications_black"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_margin="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/notification"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="gone"
        android:background="@color/color_notification_header"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        >
        <Button
            android:id="@+id/btnDateFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:hint="@string/from"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/notification_button_rectangel_shape"/>

        <Button
            android:id="@+id/btnDataTo"
            android:hint="@string/to"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/notification_button_rectangel_shape"/>

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:background="@drawable/button_search_cicle_shape"
            android:src="@drawable/img_search"/>


    </LinearLayout>
</LinearLayout>