<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        layout="@layout/view_student_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5">

    </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        android:scaleX="@integer/scale_x"
        android:backgroundTint="@color/color_green"
        android:background="@drawable/img_bg_top_table"
        android:id="@+id/lliTittle">

        <TextView
            android:id="@+id/labNameRound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@integer/scale_x"

            android:text="@string/students"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_white"
            android:layout_weight="0.569"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@integer/scale_x"

            android:text="@string/check_in"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_white"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:scaleX="@integer/scale_x"

            android:layout_height="match_parent"
            android:text="@string/absence"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call"
            android:scaleX="@integer/scale_x"

            android:layout_marginLeft="35dp"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@integer/scale_x"

            android:text="@string/change_locations"
            android:layout_marginLeft="27dp"
            android:textColor="@color/color_white"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rsStudent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>