<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="@color/color_white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/you_exceeded"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txtLimitSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/speed_limit"
        android:textColor="@color/color_black"
        android:paddingBottom="15dp"
        android:textSize="16dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="90.5"
        android:background="@drawable/speed_min_circle_shape"
        android:textColor="@color/color_black"
        android:layout_marginRight="20dp"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/txtRealSpeed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="90"
        android:background="@drawable/speed_max_circle_shape"
        android:textColor="@color/color_white"
        android:textSize="50dp" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/color_white"
            android:background="@drawable/round_custom_button_ok"
            android:gravity="center"
            android:textSize="15dp"
            android:text="@string/ok" />


    </LinearLayout>
    </LinearLayout>
</LinearLayout>