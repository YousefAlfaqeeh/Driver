<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/color_white"
    android:scaleX="@integer/scale_x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/nameRound_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleX="@integer/scale_x"
                android:text="Round"
                android:textColor="#24394A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeRound_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleX="@integer/scale_x"
                android:text="6:30 am"
                android:textColor="#24394A"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/startRound_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_start_round"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"

                android:weightSum="3">


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:textAllCaps="false"
                    app:srcCompat="@drawable/img_start"
                    app:tint="@color/yello_to_white_selector" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:scaleX="@integer/scale_x"
                    android:text="@string/start"
                    android:textColor="@drawable/black_to_white_text_selector"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/showRound_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_start_round"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="3">


                <!--<android.support.v7.widget.AppCompatImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="2"-->
                <!--android:gravity="center"-->
                <!--android:padding="5dp"-->
                <!--android:scaleType="centerInside"-->
                <!--android:src="@drawable/img_start"-->
                <!--android:textAllCaps="false"-->
                <!--android:tint="@drawable/yello_to_white_selector" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleX="@integer/scale_x"
                    android:text="@string/ended_round"
                    android:textColor="@drawable/black_to_white_text_selector"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resumeRound_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/button_start_round"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="3">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleX="@integer/scale_x"
                    android:text="@string/resume_round"
                    android:textColor="@drawable/black_to_white_text_selector"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_gray" />
</RelativeLayout>