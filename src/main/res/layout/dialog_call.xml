<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lliFather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_pick_up">

        <TextView
            android:id="@+id/labFather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/call_father"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@color/color_white"
            app:tint="@color/color_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lliMother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_pick_up">

        <TextView
            android:id="@+id/labMother"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/call_mother"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:padding="15dp"
            app:srcCompat="@drawable/img_call_dialog"
            app:tint="@color/color_white" />

    </LinearLayout>


</LinearLayout>