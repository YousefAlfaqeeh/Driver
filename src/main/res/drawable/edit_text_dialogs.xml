<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">

    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#56E493"/>
            <solid android:color="@color/transparent"></solid>
        </shape>
    </item>
    <!--//////////////-->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#56E493"/>
            <solid android:color="@color/transparent"></solid>
        </shape>
    </item>

</selector>

