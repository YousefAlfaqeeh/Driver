<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <layer-list>

            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/green_tabs_dark" />
                    <stroke android:width="1dp" android:color="@color/green_tabs_dark" />
                    <corners android:radius="250dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>

            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/green_tabs" />
                    <stroke android:width="1dp" android:color="@color/green_tabs" />
                    <corners android:radius="250dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>