<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="true">
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="#CF3337" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="#CF3337" />
                    <stroke android:width="2dp" android:color="#CF3337" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item  android:state_enabled="false">
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="@color/color_gray" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/color_white" />
                    <stroke android:width="2dp" android:color="@color/color_gray" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="#CF3337" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/color_white" />
                    <stroke android:width="1dp" android:color="#CF3337" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>