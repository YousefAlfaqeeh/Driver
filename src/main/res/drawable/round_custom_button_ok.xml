<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">


    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <solid android:color="#27AD8F" />
                    <corners android:radius="45dp" />

                </shape>
            </item>

            <!-- White Top color -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#27AD8F" />
                    <corners android:radius="54dp"></corners>
                </shape>

            </item>
        </layer-list>
    </item>
    <item >
        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <solid android:color="#27AD8F" />
                    <corners android:radius="45dp" />

                </shape>
            </item>

            <!-- White Top color -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_blue_light"></solid>
                    <corners android:radius="54dp"></corners>
                </shape>

            </item>
        </layer-list>
    </item>
</selector>