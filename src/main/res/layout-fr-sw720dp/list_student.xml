<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_marginTop="@dimen/padding_10"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/lliMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgStudent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1.5"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"
                android:src="@drawable/img_user" />

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/imgStudent"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="70dp"-->
            <!--android:padding="5dp"-->
            <!--app:civ_border_width="2.5dp"-->
            <!--app:civ_border_color="@color/colorPrimary"-->
            <!--android:src="@mipmap/img_bus_track"-->
            <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="@color/color_student_name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7th Grade"
                    android:textColor="@color/color_black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/labGrade"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School A"
                    android:visibility="gone"
                    android:textColor="@color/color_gray"
                    android:textSize="11dp"
                    android:id="@+id/labSchoolName"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lliDone"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:tint="@color/color_black"
                    android:src="@drawable/img_check_in"
                    android:id="@+id/imgDone" />
                <TextView
                    android:id="@+id/labDone"
                    android:text="Done"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:textColor="@color/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="visible"
                android:layout_weight="0.85"
                android:padding="@dimen/padding_10"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">



                <ImageView
                    android:padding="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tint="@color/color_black"
                    android:src="@drawable/img_check_in"
                    android:background="@drawable/button_none"
                    android:id="@+id/imgCheck" />
                <ImageView
                    android:padding="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tint="@color/color_black"
                    android:src="@drawable/img_none"
                    android:background="@drawable/button_none"
                    android:layout_marginLeft="27dp"
                    android:id="@+id/imgShow"/>




                <ImageView
                    android:padding="18dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/img_call"
                    android:tint="@color/color_black"
                    android:background="@drawable/button_none"
                    android:layout_marginLeft="80dp"
                    android:id="@+id/imgCall"
                    />

                <ImageView
                    android:tint="@color/color_black"
                    android:padding="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/img_change_location"
                    android:background="@drawable/button_none"
                    android:visibility="visible"
                    android:id="@+id/imgChangeLocation" />



            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@color/color_header"
            />

    </LinearLayout>




</LinearLayout>