<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        layout="@layout/view_round_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:background="@drawable/img_bg_top_table">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"

            android:background="@drawable/img_bg_top_table"
            android:scaleX="@integer/scale_x"
            android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="@integer/scale_x"

            android:gravity="center"
            android:text="@string/name_rounds"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/start_round"
            android:scaleX="@integer/scale_x"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_pick_up"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_pick_up" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/pic_up"
                        android:textColor="@color/color_white"
                        android:textSize="22dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgArrowPickup"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/img_arrow"
                    android:tint="@color/color_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llDropPff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_drop_off"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_drop_off" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/drop_off"
                        android:textColor="@color/color_white"
                        android:textSize="22dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgArrowDrop"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/img_arrow"
                    android:tint="@color/color_red" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llOther"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_other"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_other" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/other"
                        android:textColor="@color/color_white"
                        android:textSize="22dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgArrowOther"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/img_arrow"
                    android:tint="@color/color_blue" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rsRound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/padding_10" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>


