<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/color_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameRound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:text="Round"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTimeRound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6:30 am"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:textSize="27dp"

                />
        </LinearLayout>

        <!--<Button-->
        <!--android:id="@+id/btn_startRound"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="2.15"-->
        <!--android:textAllCaps="false"-->
        <!--android:background="@drawable/round_custom_button"-->
        <!--android:text="@string/start"-->
        <!--android:textStyle="bold"-->
        <!--android:gravity="center"-->
        <!--android:padding="@dimen/padding_15" />-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgStartRound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_start_round"
                android:padding="15dp"
                android:src="@drawable/img_start"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginTop="2dp"
        android:background="@color/color_header"></View>
